<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:background="@color/white"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".PagsActivity">

    <Button
        android:id="@+id/BotonHRAC"
        style="@style/Widget.AppCompat.Button.Borderless.Colored"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="24dp"
        android:layout_marginTop="24dp"
        android:layout_marginEnd="24dp"
        android:layout_marginBottom="24dp"
        android:background="@drawable/degradado"
        android:text="@string/BotonEntrar"
        android:textColor="#2E7D32"
        app:backgroundTint="@color/cardview_shadow_end_color"
        app:backgroundTintMode="src_atop"
        app:icon="@drawable/logo_hrac"
        app:layout_constraintBottom_toTopOf="@+id/BotonCasafe"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        tools:ignore="DuplicateSpeakableTextCheck" />

    <Button
        android:id="@+id/BotonCasafe"
        style="@style/Widget.AppCompat.Button.Borderless.Colored"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="24dp"
        android:layout_marginTop="24dp"
        android:layout_marginEnd="24dp"
        android:layout_marginBottom="24dp"
        android:background="@drawable/degradado"
        android:text="@string/BotonEntrar"
        app:backgroundTint="@color/cardview_shadow_end_color"
        app:backgroundTintMode="src_atop"
        app:icon="@drawable/casafe_logo_fullcolor_vertical_con_bajada"
        app:layout_constraintBottom_toTopOf="@+id/BotonAapresid"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/BotonHRAC" />

    <Button
        android:id="@+id/BotonAapresid"
        style="@style/Widget.AppCompat.Button.Borderless.Colored"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="24dp"
        android:layout_marginTop="24dp"
        android:layout_marginEnd="24dp"
        android:layout_marginBottom="32dp"
        android:background="@drawable/degradado"
        android:text="@string/BotonEntrar"
        app:backgroundTint="@color/cardview_shadow_end_color"
        app:backgroundTintMode="src_atop"
        app:icon="@drawable/aapresid"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/BotonCasafe" />
</androidx.constraintlayout.widget.ConstraintLayout>